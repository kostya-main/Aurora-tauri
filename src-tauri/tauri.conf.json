{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "aurora",
  "version": "0.1.0",
  "identifier": "com.aurora.app",
  "build": {
    "beforeDevCommand": "npx vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aurora Launcher",
        "width": 900,
        "height": 550,
        "decorations": false,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
